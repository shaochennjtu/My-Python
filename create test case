from pylarion.test_run import TestRun
import ssl
ssl._create_default_https_context = ssl._create_unverified_context

TEST_RUN_GRP = {"4_3_Node_Tier1_Install":"4_5_20221010_Tier1_Install_cshao",
		"4_4_Node_Tier1_General":"4_5_20221010_Tier1_General_cshao",
		"4_4_Node_Tier1_ISO":"4_5_20221010_Tier1_ISO_cshao",
		"4_3_Node_Tier1_Networking":"4_5_20221010_Tier1_Networking_peyu",
		"4_3_Node_Tier1_Upgrade_Rollback":"4_5_20221010_Tier1_Upgrade_peyu",
		"4_3_Node_Tier1_IPv6":"4_5_20221010_Tier1_IPv6_peyu",
		"4_4_Node_Tier1_Vdsm_RHVM":"4_5_20221010_Tier1_vdsm_cshao",
		"4_4_Node_Tier1_Cockpit-Ovirt_Common":"4_5_20221010_Tier1_Cockpit_Commin_weiwang",
		"4_4_Node_Tier1_Cockpit-Ovirt_Dashboard":"4_5_20221010_Tier1_Cockpit_Dashboard_weiwang",
                "4_4_Node_Tier1_Cockpit-Ovirt_HE":"4_5_20221010_Tier1_HE_weiwang"
                }

DEFAULT_PROJ = TestRun.default_project
for TEMPLATE_ID, TEST_RUN_ID in TEST_RUN_GRP.items():
    TestRun.create(DEFAULT_PROJ, TEST_RUN_ID, TEMPLATE_ID)
    testRunUrl = "https://polarion.engineering.redhat.com/polarion/#/project/%s/testrun?id=%s" % (DEFAULT_PROJ, TEST_RUN_ID)
    print("Created Test Run %s" % testRunUrl)

if __name__ == '__main__':
    pass
