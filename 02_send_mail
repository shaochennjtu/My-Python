import smtplib

TO = 'cshao@redhat.com'
SUBJECT = 'Test is a test mail'
CONTENT = 'Here is a message from python.'

gmail_sender = 'cshao@redhat.com'
server = smtplib.SMTP('smtp.corp.redhat.com')

BODY = '\r\n'.join(['To: %s' % TO,
                    'From: %s' % gmail_sender,
                    'Subject: %s' % SUBJECT,
                    '', CONTENT])

try:
    server.sendmail(gmail_sender, [TO], BODY)
    print ('Email Send Successful')
except:
    print ('Error Occurred During Sending Mail')

server.quit()
